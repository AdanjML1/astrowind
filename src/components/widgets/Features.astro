---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import type { Features as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const title2 = 'Nuestro compromiso'
const  subtitle2 = 'nos comprometemos a ofrecerte un servicio de internet que supere tus expectativas. Por eso,monitoreamos nuestras redes de manera constante para asegurar la mejor experiencia posible.'
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`w-full bg-lightBlue-100 dark:bg-gray-800 rounded-lg ${classes?.container ?? ''}`}
  bg={bg}
>
  <!-- Encabezado estilizado en tres columnas -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <!-- Primera columna -->
    <div class="col-span-1">
      <Headline
        title={title}
        subtitle={subtitle}
        tagline={tagline}
        classes={{
          title: 'text-4xl font-bold leading-tight text-gray-800 dark:text-gray-200 mb-4 text-center',
          subtitle: 'text-xl text-gray-700 dark:text-gray-400 text-center mb-6',
          tagline: 'text-md text-blue-600 text-center mb-8',
          ...((classes?.headline as Record<string, string>) ?? {}),
        }}
      />
    </div>

    <!-- Segunda columna con imagen y SVG de fondo -->
    <div class="col-span-1 flex justify-center items-center relative">
      <!-- SVG detrÃ¡s de la imagen -->
      <div
        class="absolute h-full w-full inset-0 flex justify-center items-center -z-10 transform translate-x-1 translate-y-300"
      >
        <svg
          id="visual"
          viewBox="0 0 700 700"
          width="2200"
          height="2200"
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          version="1.1"
        >
          <g transform="translate(463.0280185991943 323.8010441365823)">
            <path
              d="M138.9 -219.8C169.7 -196.4 177.2 -140.3 191 -92.4C204.9 -44.5 225.2 -4.6 225.8 36.7C226.4 77.9 207.3 120.5 175.3 145C143.3 169.5 98.4 175.9 57.6 181C16.7 186.1 -20.1 190 -54.2 181.4C-88.3 172.9 -119.7 151.9 -156.3 126.2C-192.8 100.6 -234.5 70.1 -247.4 30.9C-260.2 -8.3 -244.3 -56.3 -215.1 -89.2C-186 -122.1 -143.7 -139.9 -105.6 -160C-67.6 -180.2 -33.8 -202.6 10.1 -218.4C54.1 -234.1 108.1 -243.3 138.9 -219.8"
              fill="#F7770F"></path>
          </g>
        </svg>
      </div>

      <!-- Imagen -->
      <div class="w-full max-w-xl md:max-w-xl object-cover rounded-lg">
        <img
          src="images/bro.png"
          alt="Imagen decorativa acorde al mensaje"
          class="w-full max-w-xl md:max-w-xl object-cover rounded-lg"
        />
      </div>
    </div>

    <!-- Tercera columna -->
    <div class="col-span-1 flex flex-col items-center justify-center">
      <Headline
      title={title2}
      subtitle={subtitle2}
      tagline={tagline}
      classes={{
        title: 'text-4xl font-bold leading-tight text-gray-800 dark:text-gray-200 mb-4 text-center',
        subtitle: 'text-xl text-gray-700 dark:text-gray-400 text-center mb-6',
        tagline: 'text-md text-blue-600 text-center mb-8',
        ...((classes?.headline as Record<string, string>) ?? {}),
      }}
    />
    </div>
  </div>
</WidgetWrapper>
